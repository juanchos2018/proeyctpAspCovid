        var estado = separado[1].trim();
        var changeestado = "";
        if (estado == "1") {
            changeestado = "0";
        }
        if (estado == "0") {
            changeestado = "1";
        }
        var data = { key: key, estado: changeestado }

        $.ajax({
            url: '/Donacion/Modificar/',
            type: 'POST',
            dataType: 'json',
            data: data,
            success: function (data) {
               // alertify.success("Modificado");
